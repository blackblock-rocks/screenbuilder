{
  "schemaVersion": 1,
  "id": "bbsb",
  "version": "${version}",

  "name": "BlackBlock Screenbuilder",
  "description": "This library allows you to quickly create server-side GUIs for Minecraft Fabric",
  "authors": [
    "Skerit"
  ],
  "contact": {
    "homepage": "https://skerit.com/",
    "sources": "https://github.com/skerit/screenbuilder"
  },

  "license": "LGPLv3",
  "icon": "assets/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "rocks.blackblock.screenbuilder.BBSB"
    ],
    "polymc": [
      "rocks.blackblock.screenbuilder.polymc.ScreenBuilderPoly"
    ]
  },
  "mixins": [
    "screenbuilder.mixins.json"
  ],
  "accessWidener": "bbsb.accesswidener",

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": ">=1.18",
    "java": ">=17"
  },
  "custom": {
    "modmenu": {
      "badges": [ "library" ]
    }
  }
}
